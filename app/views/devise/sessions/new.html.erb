<style type="text/css">
<%= stylesheet_link_tag    "devise", media: "all", "data-turbolinks-track" => true %>
</style>

<div class="navbar navbar-fixed-top" id="nav-bar">
  <div class="navbar-inner">
    <a class="brand" href="#"> <i class="icon icon-bolt"></i> Sistema de Auto Aprendizaje de Idiomas</a>
    <ul class="nav pull-right">
      <li>
        <a href="/users/sign_in">Si ya estas registrado, clickea aca!</a>
      </li>
    </ul>
  </div>
</div>
<div class="loginpadding">
  <div id="hero-container">
    <h1 class="heading" id="title">Aprende nuevos idiomas</h1>
    <h2 class="heading" id="subtitle">Juga, arma y comparti tu propio listado de palabras o ejercita con otros participantes</h2>
  </div>
  <div class="row-fluid" id="signup-form-container">
    <span class="span6 offset3">
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:id => "signup-form2"}) do |f| %>
      <div id="izquierda">
        <h2>Acceder al SAAI:</h2>
        <div><%= f.label :email, :placeholder => "juan.perez@gmail.com" %><br />
          <%= f.email_field :email, :autofocus => true, :class => "centrar" %></div>

          <div><%= f.label :password, :placeholder => "************" %><br />
            <%= f.password_field :password, :class => "centrar" %></div>

            <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "rememberme" %></div>
            <% end -%>
            <div><%= f.submit "Entrar", :class => "btn btn-primary signin" %></div>
            <% end %>
          </div>
        </div>
      </span>
    </div>
  </div>

  <center><%= render "devise/shared/links" %>  </center>

