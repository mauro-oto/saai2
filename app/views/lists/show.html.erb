<div class="divpadding">
<%= link_to "<-- Regresar", "/lists", :class => "btn btn-mini" %>
<p></p>
<p>
  <strong>Nombre de lista:</strong> <%= @list.nombre %><br />
  <strong>Idioma Nativo:</strong> <%= @list.idiomaNativo %><br />
  <strong>Idioma Foraneo:</strong> <%= @list.idiomaForaneo %><br />
</p>

<h2>Filas:</h2>
  <p><center>
    <table id="filas" class="table table-striped table-condensed table-hover">
      <thead>
        <tr>
          <th>Palabra</th>
          <th>Significado</th>
          <th>Imagen</th>
          <th>Audio</th>
          <th>Sinonimos</th>
          <th>Antonimos</th>
	  <th />
        </tr>
      </thead>
      <tbody>
        <% @list.filas.each do |fila| %>
        <tr>
          <td><a href="#" class="editable1" id="palabra<%= fila.id %>" data-type="text" data-resource="fila" data-name="palabra" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.palabra %></a></td>
          <td><a href="#" class="editable1" id="significado<%= fila.id %>" data-type="text" data-resource="fila" data-name="significado" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.significado %></a></td>
          <td><a href="#" class="editable1" id="imagen<%= fila.id %>" data-type="text" data-resource="fila" data-name="imagen" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.imagen %></a></td>
          <td><a href="#" class="editable1" id="audio<%= fila.id %>" data-type="text" data-resource="fila" data-name="audio" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.audio %></a></td>
          <td><a href="#" class="editable1" id="sinonimos<%= fila.id %>" data-type="text" data-resource="fila" data-name="sinonimos" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.sinonimos %></a></td>
          <td><a href="#" class="editable1" id="antonimos<%= fila.id %>" data-type="text" data-resource="fila" data-name="antonimos" data-pk="<%= fila.id %>" data-url="/lists/<%= fila.list.id %>/filas/<%= fila.id %>.json"><%= fila.antonimos %></a></td>
	  <td><%= link_to raw('<i class="icon-trash icon-white"></i>'), [fila.list, fila], class: "btn btn-danger", method: :delete, data: { confirm: 'Pulsa OK para confirmar el borrado de fila' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table></center>
  </p>

<h2>Agregar una fila:</h2>
<%= form_for([@list, @list.filas.build]) do |f| %>
  <p>
  <center><table id="filas2">
  <tr>
  <td>
    <%= f.label :palabra %><br />
    <%= f.text_field :palabra %>
  </td>
  <td>
    <%= f.label :significado %><br />
    <%= f.text_field :significado %>
  </td>
  <td>
    <%= f.label :imagen %><br />
    <%= f.text_field :imagen %>
  </td>
  </tr>
  <tr>
  <td>
    <%= f.label :audio %><br />
    <%= f.text_field :audio %>
  </td>
  <td>
    <%= f.label :sinonimos %><br />
    <%= f.text_field :sinonimos %>
  </td>
  <td>
    <%= f.label :antonimos %><br />
    <%= f.text_field :antonimos %>
  </td>
  </tr>
  </table>
  <%= f.submit "Crear fila", :class => "btn btn-success crearfila" %>
  <br />
  </center>
<% end %>
</div>