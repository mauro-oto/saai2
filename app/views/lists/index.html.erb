<style type="text/css">
  #newlistlink{
    font-size: 0.5em;
  }
</style>

<div class="dom-body-text paragraph">
<h1>Mostrando listas de <%= current_user.nombre %>: </h1>
<br />
 
<center>
<table id="listas" class="table table-striped table-condensed table-hover">
<thead>
  <tr>
    <th>Nombre</th>
    <th>Idioma Nativo</th>
    <th>Idioma Foraneo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 </thead>
 <tbody>
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.nombre %></td>
      <td><%= list.idiomaNativo %></td>
      <td><%= list.idiomaForaneo %></td>
      <td><%= link_to 'Show', list_path(list) %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
</center>

<p>
<%= link_to 'Lista Nueva', new_list_path, id:"newlistlink" %>
</p>
</div>