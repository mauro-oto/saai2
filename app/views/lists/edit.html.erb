<div class="divpadding">
<%= link_to "<-- Regresar", "/lists", :class => "btn btn-mini" %>
<p>
<h1>Editar Lista</h1>
</p>

<%= form_for :list, url: list_path(@list.id), method: :patch do |f| %>
  <% if @list.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@list.errors.count, "error") %> prohibited
      this list from being saved:</h2>
    <ul>
    <% @list.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :nombre, "Nombre: " %>
    <%= f.text_field :nombre %>
  </p>
 
  <p>
    <%= f.label :idiomaNativo, "Idioma Nativo: " %>
    <%= f.text_area :idiomaNativo %>
  </p>
  
  <p>
    <%= f.label :idiomaForaneo, "Idioma Foraneo: " %>
    <%= f.text_field :idiomaForaneo %>
  </p>
 
  <p>
    <%= f.submit "Editar Lista", :class => "btn btn-success" %>
  </p>
<% end %>
</div>