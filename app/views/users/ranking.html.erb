<h>Ranking</h>
    <div id="page-wrapper">
      <div id="absolute-wrapper">
        <div class="rectangle rectangle-1 rectangle-2 rectangle-3">
          <h1 class="heading">Sistema de Auto Aprendizaje de Idiomas</h1>
        </div>
        <div class="rectangle rectangle-2 rectangle-4">
          <img src="images/black_invert_30x40.png" class="image">
        </div>
        <table class="table table-striped table-bordered table-bordered-3">
          <thead>
            <tr>
              <th class="th-1">Tus Puntos Publicos</th>
              <th>Tus Puntos Privados</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= current_user.puntosPublicos %></td>
              <td><%= current_user.puntosPrivados %></td>
            </tr>
          </tbody>
        </table>
        <div class="rectangle rectangle-1 rectangle-5">
          <h3 class="heading heading-1">Rankings</h3>
          <h4 class="heading heading-2">Puntos Públicos</h4>
          <h4 class="heading heading-3">Mas Listas Creadas</h4>
          <h4 class="heading heading-4">Puntos Privados</h4>
          <table class="table table-striped table-bordered table-bordered-1 table-bordered-2 table-bordered-4">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Puntos</th>
              </tr>
            </thead>
            <tbody>
              <% i = 0 %>
              <% while (i < @usersPuntosPublicos.length) and (i < 5) %>
                <tr>
            	  <td><%= @usersPuntosPublicos[i].nombre %></td>
            	  <td><%= @usersPuntosPublicos[i].puntosPublicos %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </tbody>
          </table>
          <table class="table table-striped table-bordered table-bordered-2 table-bordered-5">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Puntos</th>
              </tr>
            </thead>
            <tbody>
              <% i = 0 %>
              <% while (i < @usersPuntosPrivados.length) and (i < 5) %>
                <tr>
            	  <td><%= @usersPuntosPrivados[i].nombre %></td>
            	  <td><%= @usersPuntosPrivados[i].puntosPrivados %></td>
                </tr>
                <% i += 1 %>
              <% end %>
            </tbody>
          </table>
          <table class="table table-striped table-bordered table-bordered-1 table-bordered-2 table-bordered-6">
            <thead>
              <tr>
                <th>Usuario</th>
                <th>Puntos</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1- Mauro Otonelli</td>
                <td>60</td>
              </tr>
              <tr>
                <td>2- Juan Becker</td>
                <td>50</td>
              </tr>
              <tr>
                <td>3- Juan Pérez</td>
                <td>25</td>
              </tr>
              <tr>
                <td>4- Etc..</td>
                <td>Etc...</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="row-fluid"></div>
      </div>
    </div>